{
  "compilerOptions": {
    "target": "ESNEXT",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "rootDir": "./src/",
    "jsx": "react",
    "module": "commonjs",
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "types": ["node", "jest", "@testing-library/jest-dom", "webpack-env"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
