{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src": ["src/*"],
    },
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2015"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
